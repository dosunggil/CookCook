<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.cho.recipe.persistance.DosungUserDao">
	<select id="selectAll" resultType="UserVO">
		Select * From tbl_users
	</select>


	<select id="findById" resultType="UserVO">
		Select * from tbl_users where username = #{username}
	</select>

	<select id="findByEmail" resultType="UserVO">
		Select * from tbl_users where email = #{email}
	</select> 


	<insert id="insert" parameterType="UserVO">

	insert into tbl_users(	
			username,
			password,	
			email,		
			nickname,	
			role		
			)
		values 
			(
			#{username},
			#{password},	
			#{email},		
			#{nickname},	
			#{role}
			)
	</insert>

	<update id="update" parameterType="UserVO">
			UPDATE tbl_users SET
		        password = #{password},	
		      	
		        nickname = #{nickname},		
		     
		        photo = #{photo},
		        bio = #{bio}	
		where	username = #{username}
	</update>
	<delete id="delete">
		delete from tbl_users where username= #{username}
	
	</delete>	
	
	
</mapper>

